from urllib2 import urlopen
from HTMLParser import HTMLParser

Architectures = [ 'i386', 'm86k', 'sparc', 'alpha', 'powerpc', 'arm', 'armel',
        'mips', 'mipsel', 'hppa', 'ia64', 's390', 'amd64', 'arm/armv5tel']

class PorterBoxParser(HTMLParser):

    machine_entry_found = False
    machine_name_found = False
    machine_name = ''
    machine_arch = ''

    def __init__(self, url):
        HTMLParser.__init__(self)
        self.feed(urlopen(url).read())

    def handle_starttag(self, tag, attrs):
        if tag == 'tr' and not self.machine_entry_found:
            self.machine_entry_found = True
        elif tag == 'a' and self.machine_entry_found:
            self.machine_name_found = True
            self.machine_entry_found = False

    def handle_data(self, data):
        if self.machine_name_found:
            self.machine_name = data
            self.machine_name_found = False
        elif data in Architectures:
            self.machine_arch = data
        elif data == 'porterbox':
            print "%s (%s)" % (self.machine_name, self.machine_arch)

if __name__ == '__main__':
    PorterBoxParser('http://db.debian.org/machines.cgi')
